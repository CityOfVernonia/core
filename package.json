{
  "name": "@vernonia/core",
  "version": "2.2.1",
  "description": "City of Vernonia widgets and friends for Esri JavaScript API using Calcite.",
  "type": "module",
  "scripts": {
    "build": "tsc && sass src/cov.scss:dist/cov.css && sass src/widgets:dist/widgets",
    "dev": "vite",
    "lint": "eslint . --ext .ts,.tsx",
    "postinstall": "node ./scripts/postinstall.js",
    "prettier": "prettier --write \"src/**/*.ts?(x)\"",
    "test": "npm run prettier && npm run lint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CityOfVernonia/core.git"
  },
  "author": "COV-GIS",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/CityOfVernonia/core/issues"
  },
  "homepage": "https://github.com/CityOfVernonia/core#readme",
  "devDependencies": {
    "@types/js-cookie": "^3.0.3",
    "@types/luxon": "^3.3.0",
    "@types/papaparse": "^5.3.7",
    "@types/sortablejs": "^1.15.1",
    "@typescript-eslint/eslint-plugin": "^5.60.0",
    "@typescript-eslint/parser": "^5.60.1",
    "@vernonia/map-application": "^1.0.18",
    "eslint": "^8.43.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "prettier": "^2.8.8",
    "replace-in-file": "^7.0.1",
    "sass": "^1.63.6",
    "tslib": "^2.5.3",
    "typescript": "^5.1.3",
    "vite": "^4.3.9"
  },
  "dependencies": {
    "@arcgis/core": "^4.27.6",
    "@esri/calcite-components": "^1.4.2",
    "@vernonia/georeferenced-media": "^1.0.3",
    "js-cookie": "^3.0.5",
    "luxon": "^3.3.0",
    "papaparse": "^5.4.1"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "node": true
    },
    "parser": "@typescript-eslint/parser",
    "ignorePatterns": [
      "package.json",
      "package-lock.json",
      "node_modules/**",
      "dist/**"
    ],
    "rules": {
      "no-console": 0,
      "@typescript-eslint/no-explicit-any": 0,
      "@typescript-eslint/ban-ts-comment": 1,
      "no-useless-escape": 1
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:prettier/recommended"
    ],
    "plugins": [
      "@typescript-eslint"
    ]
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all",
    "printWidth": 120,
    "tabWidth": 2,
    "endOfLine": "auto"
  }
}
