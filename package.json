{
  "name": "@vernonia/core",
  "version": "3.4.0",
  "description": "City of Vernonia widgets and friends for ArcGIS Maps SDK for JavaScript using Calcite Design System.",
  "type": "module",
  "scripts": {
    "assets": "node ./scripts/assets.js",
    "build": "rimraf dist && tsc && sass src:dist && node ./scripts/minify.js",
    "dev": "vite --config ./dev/vite.config.js",
    "docs": "typedoc",
    "lint": "eslint . --ext .ts,.tsx",
    "prettier": "prettier --write \"src/**/*.ts?(x)\"",
    "test": "npm run prettier && npm run lint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CityOfVernonia/core.git"
  },
  "author": "COV-GIS",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/CityOfVernonia/core/issues"
  },
  "homepage": "https://github.com/CityOfVernonia/core#readme",
  "devDependencies": {
    "@mxssfd/typedoc-theme": "^1.1.3",
    "@types/js-cookie": "^3.0.6",
    "@types/luxon": "^3.4.2",
    "@types/node": "^20.11.16",
    "@types/papaparse": "^5.3.14",
    "@types/pubsub-js": "^1.8.6",
    "@types/sortablejs": "^1.15.7",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vernonia/map-application": "^1.0.25",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "fs-extra": "^11.2.0",
    "glob": "^10.3.10",
    "prettier": "^3.2.5",
    "replace-in-file": "^7.1.0",
    "rimraf": "^5.0.5",
    "sass": "^1.70.0",
    "terser": "^5.27.0",
    "tslib": "^2.6.2",
    "typedoc": "^0.25.7",
    "typescript": "^5.3.3",
    "vite": "^5.0.12"
  },
  "dependencies": {
    "@arcgis/core": "^4.28.10",
    "@esri/calcite-components": "^2.4.0",
    "@esri/calcite-ui-icons": "^3.26.1",
    "fast-xml-parser": "^4.3.4",
    "js-cookie": "^3.0.5",
    "luxon": "^3.4.4",
    "papaparse": "^5.4.1",
    "pubsub-js": "^1.9.4"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "node": true
    },
    "parser": "@typescript-eslint/parser",
    "ignorePatterns": [
      "package.json",
      "package-lock.json",
      "node_modules/**",
      "dev/**",
      "dist/**",
      "docs/**"
    ],
    "rules": {
      "no-console": 0,
      "@typescript-eslint/no-explicit-any": 0,
      "@typescript-eslint/ban-ts-comment": 1,
      "no-useless-escape": 1,
      "no-unused-vars": "off",
      "@typescript-eslint/no-unused-vars": 1
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:prettier/recommended"
    ],
    "plugins": [
      "@typescript-eslint"
    ]
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all",
    "printWidth": 120,
    "tabWidth": 2,
    "endOfLine": "auto"
  }
}
