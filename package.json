{
  "name": "@vernonia/core",
  "version": "3.0.5",
  "description": "City of Vernonia widgets and friends for ArcGIS Maps SDK for JavaScript using Calcite Design System.",
  "type": "module",
  "scripts": {
    "assets": "node ./scripts/assets.js",
    "build": "rimraf dist && tsc && sass src:dist && node ./scripts/minify.js",
    "dev": "vite --config ./dev/vite.config.js",
    "lint": "eslint . --ext .ts,.tsx",
    "prettier": "prettier --write \"src/**/*.ts?(x)\"",
    "test": "npm run prettier && npm run lint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CityOfVernonia/core.git"
  },
  "author": "COV-GIS",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/CityOfVernonia/core/issues"
  },
  "homepage": "https://github.com/CityOfVernonia/core#readme",
  "devDependencies": {
    "@types/js-cookie": "^3.0.3",
    "@types/luxon": "^3.3.1",
    "@types/node": "^20.5.3",
    "@types/papaparse": "^5.3.8",
    "@types/pubsub-js": "^1.8.3",
    "@types/sortablejs": "^1.15.1",
    "@types/uuid": "^9.0.2",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "@vernonia/map-application": "^1.0.25",
    "eslint": "^8.47.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "fs-extra": "^11.1.1",
    "glob": "^10.3.3",
    "prettier": "^3.0.2",
    "replace-in-file": "^7.0.1",
    "rimraf": "^5.0.1",
    "sass": "^1.66.1",
    "terser": "^5.19.2",
    "tslib": "^2.6.2",
    "typescript": "^5.1.6",
    "vite": "^4.4.9"
  },
  "dependencies": {
    "@arcgis/core": "^4.27.6",
    "@esri/calcite-components": "^1.6.1",
    "fast-xml-parser": "^4.2.7",
    "js-cookie": "^3.0.5",
    "luxon": "^3.4.1",
    "papaparse": "^5.4.1",
    "pubsub-js": "^1.9.4",
    "uuid": "^9.0.0"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "node": true
    },
    "parser": "@typescript-eslint/parser",
    "ignorePatterns": [
      "package.json",
      "package-lock.json",
      "node_modules/**",
      "dist/**"
    ],
    "rules": {
      "no-console": 0,
      "@typescript-eslint/no-explicit-any": 0,
      "@typescript-eslint/ban-ts-comment": 1,
      "no-useless-escape": 1,
      "no-unused-vars": "off",
      "@typescript-eslint/no-unused-vars": 1
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:prettier/recommended"
    ],
    "plugins": [
      "@typescript-eslint"
    ]
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all",
    "printWidth": 120,
    "tabWidth": 2,
    "endOfLine": "auto"
  }
}
