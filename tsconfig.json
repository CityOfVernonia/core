{
  "compilerOptions": {
    "lib": [
      "ESNext",
      "dom",
    ],
    "strict": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "skipLibCheck": true,
    "paths": {
      "tslib": ["./node_modules/tslib/tslib.d.ts"]
    },
    "experimentalDecorators": true,
    "jsx": "react",
    "jsxFactory": "tsx",
    "outDir": "dist/",
    "declaration": true,
    "types": [
      "@esri/calcite-components",
      "cov",
      "papaparse",
      "pouchdb"
    ]
  },
  "exclude": [
    "node_modules/"
  ],
  "include": [
    "layouts/",
    "popups/",
    "support/",
    "viewModels/",
    "widgets/",
    "interfaces.d.ts"
  ]
}
